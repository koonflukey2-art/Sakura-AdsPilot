generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  MARKETER
  VIEWER
}

enum RuleType {
  CPA_BUDGET_REDUCTION
  ROAS_PAUSE_ADSET
  CTR_FATIGUE_ALERT
}

enum ActionType {
  REDUCE_BUDGET
  PAUSE_ADSET
  NOTIFY_ONLY
}

enum ActionStatus {
  PENDING
  SUCCESS
  FAILED
  SKIPPED
}

model User {
  id             String      @id @default(cuid())
  name           String?
  email          String      @unique
  passwordHash   String
  role           Role        @default(VIEWER)
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt
  auditLogs      AuditLog[]
  rulesCreated   Rule[]      @relation("RuleCreatedBy")
}

model MetaConnection {
  id              String   @id @default(cuid())
  userId          String
  metaAdAccountId String
  accessTokenEnc  String
  tokenExpiresAt  DateTime?
  isActive        Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([metaAdAccountId])
}

model Metric {
  id            String   @id @default(cuid())
  date          DateTime
  platform      String   @default("META")
  campaignId    String?
  adSetId       String?
  spend         Decimal  @db.Decimal(10, 2)
  conversions   Int
  cpa           Decimal  @db.Decimal(10, 2)
  roas          Decimal  @db.Decimal(10, 2)
  ctr           Decimal  @db.Decimal(5, 2)
  frequency     Decimal  @db.Decimal(5, 2)
  createdAt     DateTime @default(now())

  @@index([date, platform])
  @@index([campaignId, adSetId])
}

model Rule {
  id                     String    @id @default(cuid())
  name                   String
  description            String
  type                   RuleType
  isEnabled              Boolean   @default(true)
  autoApply              Boolean   @default(false)
  configJson             Json
  maxBudgetChangePerDay  Int       @default(20)
  cooldownHours          Int       @default(24)
  createdById            String
  createdAt              DateTime  @default(now())
  updatedAt              DateTime  @updatedAt
  createdBy              User      @relation("RuleCreatedBy", fields: [createdById], references: [id])
  actions                Action[]
}

model Action {
  id              String       @id @default(cuid())
  ruleId          String
  actionType      ActionType
  targetRef       String
  summary         String
  kpiSnapshotJson Json
  idempotencyKey  String       @unique
  status          ActionStatus @default(PENDING)
  actor           String       @default("SYSTEM")
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  executedAt      DateTime?
  resultMessage   String?
  rule            Rule         @relation(fields: [ruleId], references: [id])
}

model AuditLog {
  id          String   @id @default(cuid())
  actorType   String
  actorId     String?
  actorLabel  String
  eventType   String
  entityType  String
  entityId    String
  detailsJson Json
  createdAt   DateTime @default(now())
  user        User?    @relation(fields: [actorId], references: [id])

  @@index([createdAt, eventType])
}

model NotificationSetting {
  id               String   @id @default(cuid())
  emailEnabled     Boolean  @default(false)
  smtpHost         String?
  smtpPort         Int?
  smtpUser         String?
  smtpPassEnc      String?
  smtpFrom         String?
  notifyEmailTo    String?
  lineEnabled      Boolean  @default(false)
  lineMode         String?  @default("NOTIFY")
  lineTokenEnc     String?
  updatedAt        DateTime @updatedAt
  createdAt        DateTime @default(now())
}

model NotificationLog {
  id          String   @id @default(cuid())
  channel     String
  recipient   String
  payloadJson Json
  status      String
  error       String?
  createdAt   DateTime @default(now())
}
