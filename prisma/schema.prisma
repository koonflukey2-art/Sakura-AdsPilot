generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  EMPLOYEE
}

enum RuleType {
  CPA_BUDGET_REDUCTION
  ROAS_PAUSE_ADSET
  CTR_FATIGUE_ALERT
}

enum RuleScopeType {
  ACCOUNT
  CAMPAIGN
  ADSET
}

enum MetaConnectionStatus {
  CONNECTED
  DISCONNECTED
  ERROR
}

enum ActionType {
  REDUCE_BUDGET
  PAUSE_ADSET
  NOTIFY_ONLY
}

enum ActionStatus {
  PENDING
  SUCCESS
  FAILED
  SKIPPED
}

enum Platform {
  META
  TIKTOK
  SHOPEE
}

enum PlatformConnectionStatus {
  CONNECTED
  DISCONNECTED
  ERROR
}

enum CustomerEventType {
  IDENTIFIED
  PAGE_VIEW
  MESSAGE
  ORDER
  CUSTOM
}

enum AiSuggestionStatus {
  PENDING
  APPLIED
  DISMISSED
}

model Organization {
  id                  String                @id @default(cuid())
  name                String                @unique
  createdAt           DateTime              @default(now())
  updatedAt           DateTime              @updatedAt
  users               User[]
  metrics             Metric[]
  rules               Rule[]
  actions             Action[]
  auditLogs           AuditLog[]
  notificationSetting NotificationSetting?
  notificationLogs    NotificationLog[]
  metaConnections     MetaConnection[]
  platformConnections PlatformConnection[]
  customers           Customer[]
  customerEvents      CustomerEvent[]
  customerOrders      CustomerOrder[]
  aiSuggestions       AiSuggestion[]
  workerLocks         WorkerLock[]
}

model User {
  id             String       @id @default(cuid())
  organizationId String
  name           String?
  email          String       @unique
  passwordHash   String
  role           Role         @default(EMPLOYEE)
  isActive       Boolean      @default(true)
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  auditLogs      AuditLog[]
  rulesCreated   Rule[]       @relation("RuleCreatedBy")

  @@index([organizationId, role])
  @@index([organizationId, isActive])
}

model MetaConnection {
  id              String       @id @default(cuid())
  organizationId  String
  userId          String
  adAccountId     String
  accessTokenEnc  String
  tokenExpiresAt  DateTime?
  status          MetaConnectionStatus @default(DISCONNECTED)
  testedAt        DateTime?
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  organization    Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@index([organizationId, adAccountId])
}

model Metric {
  id             String       @id @default(cuid())
  organizationId String
  date           DateTime
  platform       String       @default("META")
  campaignId     String?
  adSetId        String?
  spend          Decimal      @db.Decimal(10, 2)
  conversions    Int
  cpa            Decimal      @db.Decimal(10, 2)
  roas           Decimal      @db.Decimal(10, 2)
  ctr            Decimal      @db.Decimal(5, 2)
  frequency      Decimal      @db.Decimal(5, 2)
  createdAt      DateTime     @default(now())
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@index([organizationId, date, platform])
  @@index([organizationId, campaignId, adSetId])
}

model Rule {
  id                    String       @id @default(cuid())
  organizationId        String
  name                  String
  description           String
  type                  RuleType
  isEnabled             Boolean      @default(true)
  autoApply             Boolean      @default(false)
  configJson            Json
  scopeType             RuleScopeType @default(ACCOUNT)
  scopeIds              String[]      @default([])
  applyToAll            Boolean       @default(true)
  maxBudgetChangePerDay Int          @default(20)
  cooldownHours         Int          @default(24)
  createdById           String
  createdAt             DateTime     @default(now())
  updatedAt             DateTime     @updatedAt
  organization          Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  createdBy             User         @relation("RuleCreatedBy", fields: [createdById], references: [id])
  actions               Action[]

  @@index([organizationId, isEnabled])
}

model Action {
  id              String       @id @default(cuid())
  organizationId  String
  ruleId          String
  actionType      ActionType
  targetRef       String
  summary         String
  kpiSnapshotJson Json
  idempotencyKey  String       @unique
  status          ActionStatus @default(PENDING)
  actor           String       @default("SYSTEM")
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  executedAt      DateTime?
  resultMessage   String?
  organization    Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  rule            Rule         @relation(fields: [ruleId], references: [id])

  @@index([organizationId, createdAt])
}

model AuditLog {
  id             String       @id @default(cuid())
  organizationId String
  actorType      String
  actorId        String?
  actorLabel     String
  eventType      String
  entityType     String
  entityId       String
  detailsJson    Json
  createdAt      DateTime     @default(now())
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  user           User?        @relation(fields: [actorId], references: [id])

  @@index([organizationId, createdAt, eventType])
}

model NotificationSetting {
  id             String       @id @default(cuid())
  organizationId String       @unique
  emailEnabled   Boolean      @default(false)
  smtpHost       String?
  smtpPort       Int?
  smtpUser       String?
  smtpPassEnc    String?
  smtpFrom       String?
  notifyEmailTo  String?
  lineEnabled    Boolean      @default(false)
  lineMode       String?      @default("NOTIFY")
  lineTokenEnc   String?
  updatedAt      DateTime     @updatedAt
  createdAt      DateTime     @default(now())
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
}

model NotificationLog {
  id             String       @id @default(cuid())
  organizationId String
  channel        String
  recipient      String
  payloadJson    Json
  status         String
  error          String?
  createdAt      DateTime     @default(now())
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@index([organizationId, createdAt])
}

model WorkerLock {
  id             String       @id @default(cuid())
  organizationId String
  lockKey        String
  lockedUntil    DateTime
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@unique([organizationId, lockKey])
  @@index([organizationId, lockedUntil])
}

model PlatformConnection {
  id             String                   @id @default(cuid())
  organizationId String
  userId         String
  platform       Platform
  accountRef     String?
  accessTokenEnc String?
  tokenExpiresAt DateTime?
  status         PlatformConnectionStatus @default(DISCONNECTED)
  testedAt       DateTime?
  metadataJson   Json?
  createdAt      DateTime                 @default(now())
  updatedAt      DateTime                 @updatedAt
  organization   Organization             @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@index([organizationId, platform, updatedAt])
}

model Customer {
  id             String             @id @default(cuid())
  organizationId String
  displayName    String?
  firstSeenAt    DateTime           @default(now())
  lastSeenAt     DateTime           @default(now())
  createdAt      DateTime           @default(now())
  updatedAt      DateTime           @updatedAt
  organization   Organization       @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  identities     CustomerIdentity[]
  events         CustomerEvent[]
  orders         CustomerOrder[]

  @@index([organizationId, lastSeenAt])
}

model CustomerIdentity {
  id         String    @id @default(cuid())
  customerId String
  provider   String
  value      String
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  customer   Customer  @relation(fields: [customerId], references: [id], onDelete: Cascade)

  @@unique([provider, value])
  @@index([customerId, provider])
}

model CustomerEvent {
  id             String            @id @default(cuid())
  organizationId String
  customerId     String
  eventType      CustomerEventType @default(CUSTOM)
  payloadJson    Json              @default("{}")
  occurredAt     DateTime          @default(now())
  createdAt      DateTime          @default(now())
  organization   Organization      @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  customer       Customer          @relation(fields: [customerId], references: [id], onDelete: Cascade)

  @@index([organizationId, occurredAt])
  @@index([customerId, occurredAt])
}

model CustomerOrder {
  id             String       @id @default(cuid())
  organizationId String
  customerId     String
  externalRef    String?
  amount         Decimal?     @db.Decimal(12, 2)
  currency       String?
  orderedAt      DateTime?
  payloadJson    Json         @default("{}")
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  customer       Customer     @relation(fields: [customerId], references: [id], onDelete: Cascade)

  @@index([organizationId, orderedAt])
  @@index([customerId, orderedAt])
}

model AiSuggestion {
  id             String             @id @default(cuid())
  organizationId String
  title          String
  summary        String
  payloadJson    Json               @default("{}")
  status         AiSuggestionStatus @default(PENDING)
  createdBy      String?
  appliedAt      DateTime?
  createdAt      DateTime           @default(now())
  updatedAt      DateTime           @updatedAt
  organization   Organization       @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@index([organizationId, status, createdAt])
}
